
pipeline{
  agent any
   
  stages {

  stage('Install dependencies') {
      steps{
        
        script {
         sh('npm install')
        }
      }
    }

  stage('Unit Test') {
      steps{
        
        script {
         sh('npm test')
        }
      }
    }
        stage('SonarQube Analysis') {
            steps {
                catchError(buildResult: 'UNSTABLE') {
                  sh '/path/to/sonar-scanner -Dsonar.host.url=http://192.168.1.16:9000/ -Dsonar.login=admin -Dsonar.password=123'
                }
            }
        }

  stage('Build application') {
      steps{
        
        script {
         sh('npm run twicedegro -dev')
        }
      }
    }

    }
}