
pipeline{
  agent any
   
  stages {

  stage('Install dependencies') {
      steps{
        
        script {
         sh('npm install')
        }
      }
    }

  stage('Unit Test') {
      steps{
        
        script {
         sh('npm test')
        }
      }
    }
    stage('SonarQube Analysis') {
      steps{
        script {
            def scannerHome = tool 'nest'
                withSonarQubeEnv {
                  sh "${scannerHome}/bin/nest"
                    }
          }
      }
}


  stage('Build application') {
      steps{
        
        script {
         sh('npm run build -dev')
        }
      }
    }

    }
}